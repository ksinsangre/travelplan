<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".addtrip.AddTripActivity"
    tools:showIn="@layout/activity_add_trip">

    <TextView
        android:id="@+id/txt_destination_title"
        android:layout_margin="16dp"
        android:padding="16dp"
        android:text="Select your destination..."
        android:drawableEnd="@drawable/ic_search_black_24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/rounded_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:id="@+id/txt_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:fontFamily="@font/roboto_mono"
        app:layout_constraintTop_toBottomOf="@+id/txt_destination_title"
        app:layout_constraintLeft_toLeftOf="parent"
        android:hint="What have you eaten?"
        app:counterEnabled="true"
        app:counterMaxLength="65"
        app:errorEnabled="true"
        app:helperTextEnabled="false">
        <com.google.android.material.textfield.TextInputEditText
            app:fontFamily="@font/roboto_mono"
            android:id="@+id/input_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:id="@+id/txt_calories"
        app:layout_constraintTop_toBottomOf="@+id/txt_title"
        app:fontFamily="@font/roboto_mono"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:hint="How much calories did you consume?"
        app:errorEnabled="true"
        app:helperTextEnabled="false">
        <com.google.android.material.textfield.TextInputEditText
            android:inputType="number"
            app:fontFamily="@font/roboto_mono"
            android:id="@+id/input_calories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>


   <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_calories"
        android:padding="16dp">

        <ProgressBar
            android:id="@+id/progress_circular"
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:theme="@style/ProgressAccent"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txt_date_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="8dp"
            android:text="When did you take this meal?"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
            android:textColor="#333333"
            app:errorEnabled="true"
            app:fontFamily="@font/roboto_mono"
            app:helperTextEnabled="false"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txt_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:elevation="8dp"
            android:text="Select your date"
            android:textColor="#333333"
            app:errorEnabled="true"
            app:fontFamily="@font/roboto_mono"
            app:helperTextEnabled="false"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_date_label" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txt_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:elevation="8dp"
            android:text="Select your time"
            android:textColor="#333333"
            android:layout_marginLeft="8dp"
            app:errorEnabled="true"
            app:fontFamily="@font/roboto_mono"
            app:helperTextEnabled="false"
            app:layout_constraintLeft_toRightOf="@+id/txt_date"
            app:layout_constraintBaseline_toBaselineOf="@+id/txt_date" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>